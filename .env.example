# Database Configuration
POSTGRES_PASSWORD=SecurePostgres123!@#
DATABASE_URL=postgresql://sentient_admin:SecurePostgres123!@#@localhost:6432/sentient_edge?sslmode=require
DATABASE_READ_URL=postgresql://sentient_admin:SecurePostgres123!@#@localhost:5433/sentient_edge?sslmode=require

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Encryption Keys
DATABASE_ENCRYPTION_KEY=your-32-character-encryption-key-here-replace-this
AES_ENCRYPTION_KEY=another-32-character-key-for-aes-encryption-here

# SSL Certificate Paths
SSL_CERT_PATH=./database/ssl/server.crt
SSL_KEY_PATH=./database/ssl/server.key
SSL_CA_PATH=./database/ssl/ca.crt

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_PASSPHRASE=secure-backup-passphrase-change-this

# Performance Monitoring
ENABLE_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=1000  # milliseconds
ENABLE_PERFORMANCE_MONITORING=true

# Replication Configuration
ENABLE_READ_REPLICA=true
REPLICA_LAG_THRESHOLD=5000  # milliseconds